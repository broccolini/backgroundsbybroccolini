<p id="notice"><%= notice %></p>

<dl>
  <dt>Name</dt>
  <dd><%= link_to background.name, background_path(background.slug) %></dd>

  <dt>Description</dt>
  <dd><%= background.description %></dd>

  <dt>Tags</dt>
  <dd>
    <% background.tags.each do |tag| %>
      <%= tag.name %>
    <% end %>
  </dd>

  <% if current_user %>
    <dt>Slug</dt>
    <dd><%= background.slug %></dd>
  <% end %>
</dl>

<% if current_user %>
  <%= link_to 'Edit', edit_background_path(background) %>
  <%= link_to 'Destroy', background, :confirm => 'Are you sure?', :method => :delete %>
<% end %>
