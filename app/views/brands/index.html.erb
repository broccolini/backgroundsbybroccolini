<h1>Listing brands</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Backgrounds</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @brands.each do |brand| %>
  <tr>
    <td><%= brand.name %></td>
    <td><%= brand.url %></td>
    <td>
      <ul>
        <% brand.backgrounds.each do |background| %>
          <li><%= background.name %></li>
        <% end %>
      </ul>
    </td>
    <td><%= link_to 'Show', brand %></td>
    <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
    <td><%= link_to 'Destroy', brand, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Brand', new_brand_path %>
